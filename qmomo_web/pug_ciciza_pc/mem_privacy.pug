		include ../pug_common/_ciciza_header.pug

		.member
			.container
				.mem_block
					.mem_body
						.mem_link
							include ../pug_common/_mem_menu.pug
						.mem_privacy
							.mem_pra_detail
								a(href="#").tab_link.active(data-detail='pra_detail-1') 會員等級說明
								a(href="#").tab_link(data-detail='pra_detail-2') 會員權益說明
