		link(href='css/campaign.css', rel='stylesheet')
		link(href='css/jquery.fancybox.min.css', rel='stylesheet')
	body
		.wpf-loader-two
			.wpf-loader-two-inner
				span Loading
		include _header.pug
		
		.sort_block
			.container
				ul.tabs
					li.tab_link.current(data-tab='tab-1') 性感內衣
					li.tab_link(data-tab='tab-2') 舒適小褲
				.sort
					label(for="sort1")
						input(type="radio", name="sort" ,value="1", id="sort1" ,checked="checked")
						span.checkmark
						p 店長推薦
					label(for="sort2")
						input(type="radio", name="sort" ,value="2", id="sort2")
						span.checkmark
						p 最新上架
					label(for="sort3")
						input(type="radio", name="sort" ,value="3", id="sort3")
						span.checkmark
						p 熱賣商品
					label(for="sort4")
						input(type="radio", name="sort" ,value="4", id="sort4")
						span.checkmark
						p 最多人看
					label(for="sort5")
						input(type="radio", name="sort" ,value="5" ,id="sort5")
						span.checkmark
						p 價格 低 → 高
					label(for="sort6")
						input(type="radio", name="sort" ,value="6", id="sort6")
						span.checkmark
						p 價格 高 → 低
		.category
			.container
				#tab-1.tab_content.current
					.items
						include _items.pug
				#tab-2.tab_content
					.items
						include _items_pantie.pug
		.nav
			.container
				a(href="#" class="prev")
					i.fas.fa-angle-left
				.page_num_block
					a(href="#" class="nav_page_num active") 1	
					a(href="#" class="nav_page_num") 2
					a(href="#" class="nav_page_num") 3
					a(href="#" class="nav_page_num") 4
					a(href="#" class="nav_page_num") 5
					a(href="#" class="nav_page_num") 6
					a(href="#" class="nav_page_num") 7
					a(href="#" class="nav_page_num") 8
					a(href="#" class="nav_page_num") 9
					a(href="#" class="nav_page_num") 10
				
				a(href="#" class="next")
					i.fas.fa-angle-right
		include _footer.pug

		script(src='js/jquery-3.5.1.min.js')
		script(src='js/svgembedder.min.js')
		script(src='js/jquery.fancybox.min.js')
		script(src='js/common.js')
		script(src='js/category.js')