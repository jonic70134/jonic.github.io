doctype html
html
	head
		include src/_meta.pug
		link(href='css/coupon.css', rel='stylesheet')
	body
		.body_container
			include src/_topbar.pug
			include src/_header.pug
			.sub_head
				.container
					include src/_menu.pug
					.breadcrumb
						a.link(href="index.html") 首頁
						span > 個人對品折價券  
			.site-main.clearfix(role='main')
				.container
					mixin cupnimg(src)
						a.cupn_item(href='#')
							.photo
								img.cupnimg(src='img/sample/'+ src +'.jpg', alt='商品名稱', title='商品名稱')
							.info
								.cupn
									h3.name 商品名稱商品名稱商品商品名稱商品名稱商品商品名稱商品名稱商品商品名稱商品名稱商品商品名稱商品名稱商品商品名稱商品名稱商品
									.cupn_block
										.cupn_t 個人對品折價券
										.cupn_ticket
											.cupn_dur 07/13 23:59止
											.cupn_price $1,000 
								.nor
									.nor_t 市價
									.nor_price $999,999
								.dis
									.dis_net
										.dis_t 網路價
										.dis_price $299,999
									img(src="img/cupn_arrow.svg")
									.dis_net
										.dis_af 折後
										.dis_af_price $298,999
					+cupnimg('04_01_80')
					+cupnimg('04_02_80')
					+cupnimg('04_03_80')
					+cupnimg('04_04_80')
					+cupnimg('04_01_80')
					+cupnimg('04_02_80')
					+cupnimg('04_03_80')
					+cupnimg('04_04_80')
					+cupnimg('04_01_80')
					+cupnimg('04_02_80')
					+cupnimg('04_03_80')
					+cupnimg('04_04_80')
			include src/_foot.pug
			script(src='js/3rd-party/jquery-3.6.0.min.js')
			script(src='js/coupon.js')

