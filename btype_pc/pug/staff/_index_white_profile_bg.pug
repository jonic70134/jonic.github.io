					.main_head
						.header_l
							.profile
								.prof_l
									img(src='../img/sample/item_04.jpg', alt='網紅圖')
								.prof_r
									h1
										p friDay 4.0
									.social_icon
										a(href='#')
											img(src='../img/icon_30_fb.png', alt='FB')
