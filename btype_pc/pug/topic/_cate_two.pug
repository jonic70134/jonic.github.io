doctype html
html
	head
		include ../src/_meta.pug
		link(href='css/cate_two.css', rel='stylesheet')
	body
		.body_container
			include ../src/_topbar.pug
			include ../src/_header.pug
			.sub_head
				.container
					include ../src/_menu_topic.pug
			.site-main
				.cate_l
					include ../src/_item_relative.pug
				.cate_r
					//- 熱賣特選
					.per.hot_cho
						.cho_info.per_info
							a.per_l(href='item.html')
								.per_dur
									img.per_img(src='../img/sample/03_07_240.jpg', alt='商品名稱', title='商品名稱')
								.per_buy
									h2.name APPLE iPhone 13 Pro Max 128G 防水智慧手機
									.per_price
										.pay_dis
											.price $195,900
											button.button.large.btn-imd 立即購買
							.per_r
								mixin slider(src)
									a.swiper-slide(href='item.html')
										.per_block
											img(src='../img/sample/'+ src+'.jpg', alt='商品名稱', title='商品名稱')
											.per_r_info
												h3.name Grivel 分力盤/系統架設/ Grivel Four 四孔分力盤 RTFOUR 義大利製
												.per_price
													.price $999,900
													p.rush(href="#") 搶購 
								+slider('05_03_182')
								+slider('05_05_182')
								+slider('05_07_182')

					.spec_prod 
						.spec_slide
							mixin slider(big,small_top,small_bot)
								.swiper-slide(href='item.html')
									h2.title 特賣主題
									.spec_block
										a(href="item.html").spec_l
											img(src='../img/sample/'+ big+'.jpg', alt='商品名稱', title='商品名稱')
											.spec_info
												h3.name 商品名稱商品名稱商品名稱商品名稱
												.per_price
													.price $999,900
										.spec_r 
											a(href="item.html").spec_r_block
												img(src='../img/sample/'+ small_top+'.jpg', alt='商品名稱', title='商品名稱')
												.per_price
													.price $999,900
											a(href="item.html").spec_r_block
												img(src='../img/sample/'+ small_bot+'.jpg', alt='商品名稱', title='商品名稱')
												.per_price
													.price $999,900
							+slider('03_01_240','03_02_100','03_03_100')
							+slider('03_04_240','03_05_100','03_06_100')
							+slider('03_07_240','03_08_100','03_09_100')

					
					.items_bg
						.items
							-var j = 6;
							- for (var i = 0; i < j; i++)
							mixin item(prod_pic)
								a.item(href='item.html')
									.photo
										.float
											i.icon.icon_same
											i.icon.icon_track
										img(src='../img/sample/'+ prod_pic +'.jpg', alt='商品名稱', title='商品名稱')
									.info
										h3.name(itemprop='name') 商品名稱商品名稱商品商品名稱商品名稱商品
										.price $999,999
