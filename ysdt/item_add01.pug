	body
		.body_container
			include src/_topbar.pug
			include src/_header.pug
			.sub_head
				.container
					include src/_menu.pug
					.breadcrumb
						a.link(href="index.html") 首頁
						span >
						a.link(href="index.html") 家電.數位.3C.
						span >
						a.link(href="index.html") 智慧型手機
						span > iphone
			.site-main(role='main')
				.pc-item-main
					.container
						.item_frame
							.item_full
								include src/_item_slider.pug
								.info
									include src/_item_info.pug
									// 分期
									include src/_item_split.pug
									// 配送方式
									.send.item_line
										span.title 配送
										ul.value
											li.active(itemprop='model')
												| 門市配送
												i.icon.icon_check
											li(itemprop='model') 宅配
									// 數量
									.count.item_line
										span.title 數量
										.quantity
											span.quantity-decrease
												i.icon.icon_minus
											input.quantity-input(type='text', value='1', max='99', title='請輸入購買量')
											span.quantity-increase
												i.icon.icon_plus
									// 贈品區
									.gift_chk_area
										dl.add_list
											dt.title
												.l_title  贈品區 
											dd
												.add_chk_block
													span 全家商品卡100元+好收納不鏽鋼刀剪組+100週年紀念公仔
											dd
												.add_chk_block
													span 全家商品卡100元+好收納不鏽鋼刀剪組+100週年紀念公仔
									// 贈品不可選 加購區
									.add_noc
										.add_list
											.title
												.l_title
													i.icon.icon_star 加購區 
												.r_title
													span.cole00 $0
											.emp_noc
												.l_title 購買本商品，可優惠加購商品！
												a.more(href='#')
													span.more_txt  我要看加購品
													i.icon.icon_more
									.shop_btn_block.item_line
										.shop_btn
											button.button.btn-imd 立即結帳
											button.button.btn-cart 加入購物車
				// 加購 (AB區 加上class=blue)
				include src/_item_add.pug
				// 商品說明
				include src/_item_detail.pug
				// 相關商品
				include src/_item_relative.pug
			include src/_foot.pug
			script(src='js/3rd-party/jquery-3.6.0.min.js')
			script(src='js/3rd-party/swiper-bundle.min.js')
			script(src='js/3rd-party/lity.min.js')
			script(src='js/item.js')