								.per_dur
									img.per_img(src='img/sample/item_019.jpg', alt='商品名稱', title='商品名稱')
							.per_r.swiper-container
								.swiper-wrapper
									mixin slider(src)
										a.swiper-slide(href='item.html')
											.per_block
												img(src='img/sample/'+ src+'.jpg', alt='商品名稱', title='商品名稱')
												.per_r_info
													h3.name Grivel 分力盤/系統架設/ Grivel Four 四孔分力盤 RTFOUR 義大利製
													.per_price
														p.currency $
														p.price  999,900
