									+slider('item_01')
									+slider('item_02')
									+slider('item_03')
									+slider('item_04')
									+slider('item_01')
									+slider('item_02')
								.swiper-button-next
								.swiper-button-prev
					.ad_banner
						img(src='img/1200x100_ad01.jpg', alt='廣告圖')
