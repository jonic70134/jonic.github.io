					}
					.chg_st {
					display: none;
					flex-flow: column wrap;
					position: absolute;
					right: 0;
					top: 100%;
					}
					.chg_st a {
					display: block;
					width: 77px;
					margin: 2px;
					padding: 7px 10px;
					font-size: .85rem;
					color: #333;
					background-color: #eee;
					text-decoration: none;
					border-radius: 8px;
					box-shadow: -1px 1px 5px #aaa;
					}
					.chg_st a:hover {
					color: #333;
					background: #ffda34;
