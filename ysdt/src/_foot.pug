					.chg_block {
					position: fixed;
					right: 0;
					top: 40%;
					z-index: 10;
					}
					.chg_btn {
					position: relative;
					}
					.chg_btn p {
					padding: 10px 5px;
					font-size: .85rem;
					color: #333;
					background: #ffda34;
					}
					.chg_btn:hover .chg_st {
